<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <GridView
        android:id="@+id/small_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:numColumns="3"
        android:scrollbars="none" >
    </GridView>

    <LinearLayout
        android:id="@+id/medium_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/medium_app_view_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/medium_app_icon_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/icon_description"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/medium_app_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/medium_app_icon_1"
                    android:gravity="center"
                    android:shadowColor="#092929"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="2.0"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/text_size" >
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/medium_app_view_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/medium_app_icon_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/icon_description"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/medium_app_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/medium_app_icon_2"
                    android:gravity="center"
                    android:shadowColor="#092929"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="2.0"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/text_size" >
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/medium_app_view_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/medium_app_icon_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/icon_description"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/medium_app_name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/medium_app_icon_3"
                    android:gravity="center"
                    android:shadowColor="#092929"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="2.0"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/text_size" >
                </TextView>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/medium_app_view_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/medium_app_icon_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/icon_description"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/medium_app_name_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/medium_app_icon_4"
                    android:gravity="center"
                    android:shadowColor="#092929"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="2.0"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/text_size" >
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/medium_app_view_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/medium_app_icon_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/icon_description"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/medium_app_name_5"
